<UserControl x:Class="Sonic3AIR_ModLoader.ModViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sonic3AIR_ModLoader"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="View" HorizontalContentAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="Auto" Height="32">
                        <StackPanel Orientation="Horizontal"  Width="Auto" Height="32">
                            <Grid Width="32" Height="32">
                                <CheckBox IsChecked="{Binding IsEnabled}" HorizontalAlignment="Left" VerticalAlignment="Top"></CheckBox>
                                <Border Width="32" Height="32" BorderThickness="1" BorderBrush="Black" VerticalAlignment="Top" HorizontalAlignment="Left">
                                    <Image Width="30" Height="30" Source="{Binding Image}"></Image>
                                </Border>
                            </Grid>
                            <StackPanel VerticalAlignment="Center" Width="195" Margin="5" Height="Auto">
                                <TextBlock Text="{Binding Name}" TextWrapping="Wrap" FontWeight="Bold" />
                                <TextBlock Text="{Binding Author}" TextWrapping="Wrap" FontWeight="Medium" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
