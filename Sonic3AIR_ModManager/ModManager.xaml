                                                    <DropShadowEffect ShadowDepth="1" Direction="330" Color="Black" Opacity="1" BlurRadius="1"/>
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <Button Height="25" VerticalAlignment="Bottom" Content="Understood" Name="LaunchOptionsUnderstandingButton" Margin="5" Click="LaunchOptionsUnderstandingButton_Click"></Button>
                                        </Grid>
                                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" x:Name="LaunchOptionsFailureMessageBackground" Visibility="Collapsed">
                                            <Grid Background="{DynamicResource NormalBackground}" Opacity="0.8"></Grid>
                                            <TextBlock VerticalAlignment="Center" FontWeight="Bold" Name="LaunchOptionsFailureMessage" TextWrapping="Wrap" Foreground="{DynamicResource NormalText}" TextAlignment="Center">
                                            </TextBlock>
                                        </Grid>
                                    </Grid>

                                </GroupBox>
                            </Grid>
