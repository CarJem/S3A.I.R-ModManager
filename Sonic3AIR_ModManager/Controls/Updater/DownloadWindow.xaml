<Window x:Class="Sonic3AIR_ModManager.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sonic3AIR_ModManager"
        mc:Ignorable="d"
        Title="Sonic 3 A.I.R. Mod Loader" Height="150" MinWidth="400" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="Width" Background="{DynamicResource NormalBackground}">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo ProgressState="Normal"/>
    </Window.TaskbarItemInfo>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Foreground="{DynamicResource NormalText}" x:Name="Header" Text="Header" FontSize="30"  HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="0" Margin="20,0,20,0"/>
        <ProgressBar x:Name="Progress" Grid.Row="1" Margin="15"/>
        <TextBlock x:Name="ProgressText" Foreground="{DynamicResource ProgressBar.Text}" Grid.Row="1" Margin="15" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
    </Grid>
</Window>
